<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/main_padding_left"
    android:paddingRight="@dimen/main_padding_right">

    <TextView
        android:id="@+id/txAct1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/act_1"
        android:textSize="@dimen/main_text_size"
        android:layout_marginTop="@dimen/padding_bottom"
        android:layout_marginBottom="@dimen/padding_bottom"
        android:textStyle="bold"
        android:gravity="center"/>

    <fragment android:layout_width="match_parent" android:layout_height="0dp"
              android:layout_weight="1" android:id="@+id/viewer1"
              android:name="gekos.org.basicsnow.FragOne"/>

    <Button
        android:id="@+id/btAct1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Move to Activity 2"/>

    <Button
        android:id="@+id/btFrgToggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tx_frag_hide"/>



</LinearLayout>

